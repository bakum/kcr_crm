<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">
<!---->
<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="NotificationView"
  Version="12.1.2.66.68"
  InheritPersonalization="merge"
  BindingStyle="OracleName"
  CustomQuery="true"
  PageIterMode="Full"
  ComponentClass="ua.divas.view.NotificationViewImpl">
  <DesignTime>
    <Attr Name="_isExpertMode" Value="true"/>
    <Attr Name="_codeGenFlag2" Value="Coll|VarAccess"/>
  </DesignTime>
  <Variable
    Name="u_name"
    Kind="where"
    Type="java.lang.String">
    <TransientExpression><![CDATA[viewObject.getSessionUser()]]></TransientExpression>
  </Variable>
  <SQLQuery><![CDATA[SELECT Notification.ID, 
       Notification.VERSION, 
       Notification.DAT, 
       Notification.DESCRIPTION, 
       Notification.USER_ID, 
       Notification.CONTACT, 
       Notification.SERVER, 
       Notification.CLIENT, 
       Notification.TRG_NAME, 
       Notification.USER_LOGIN, 
       Notification.OBJECT_ID,
       Notification.START_DATE,
       Notification.END_DATE,
       (select nvl(count(*),0) from Notification where server = 1 and client = 0
       ) Count_Unread
FROM  NOTIFICATION Notification
where server = 1 and client = 0 and 
upper(Notification.USER_LOGIN) = upper(:u_name)]]></SQLQuery>
  <EntityUsage
    Name="Notification"
    Entity="ua.divas.model.Notification"/>
